<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="table  table-dark table-striped table-hover">
  <thead>
    <tr>
      <th class="mainHead" scope="col">Client List</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody >
    <% @clients.each do |client| %>
      <tr scope="row">
        <td><%= client.name %></td>
        <td class="tableEdit"><%= link_to 'Edit', edit_client_path(client) %></td>
        <td class="tableDel"><%= link_to 'Delete', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

